#!/usr/bin/env bash

# Function to check a subdomain
check_subdomain() {
    local DOMAIN=$1
    local SUB=$2

    # Run dig and extract first A record
    RECORD=$(dig +short ${SUB}.${DOMAIN} | head -n1)

    if [ -z "$RECORD" ]; then
        echo "The subdomain ${SUB} does not exist or has no A record."
    else
        TYPE=$(dig ${SUB}.${DOMAIN} | awk '/ANSWER SECTION/ {getline; print $4}')
        echo "The subdomain ${SUB} is a ${TYPE} record and points to ${RECORD}"
    fi
}

# Main logic
DOMAIN=$1
SUBDOMAIN=$2

if [ -z "$DOMAIN" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

if [ -n "$SUBDOMAIN" ]; then
    # If both domain and subdomain provided
    check_subdomain "$DOMAIN" "$SUBDOMAIN"
else
    # If only domain provided, check all 4 subdomains
    for sub in www lb-01 web-01 web-02; do
        check_subdomain "$DOMAIN" "$sub"
    done
fi
